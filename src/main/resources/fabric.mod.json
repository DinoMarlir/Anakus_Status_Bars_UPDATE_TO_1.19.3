{
  "schemaVersion": 1,
  "id": "anakus_status_bars",
  "version": "${version}",

  "name": "Anaku's Status Bars",
  "description": "This mod replaced the default status bars with a more modern look, as well as acts as a base for several of my other mods.",
  "authors": [
    "LordAnaku"
  ],
  "contact": {
    "homepage": "https://github.com/LordAnaku/Anakus_Status_Bars",
    "sources": "https://github.com/LordAnaku/Anakus_Status_Bars"
  },

  "license": "GPL-3.0",
  "icon": "assets/anakus_status_bars/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.lordanaku.anakus_status_bars.AnakusStatusBarsClient"
    ],
    "modmenu": [
      "io.github.lordanaku.anakus_status_bars.screen.gui.ModMenuIntegration"
    ]
  },
  "mixins": [
    "anakus_status_bars.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "modmenu": "*"
  }
}
