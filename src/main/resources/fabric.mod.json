{
  "schemaVersion": 1,
  "id": "anakus_status_bars",
  "version": "${version}",

  "name": "Anaku's Status Bars",
  "description": "This mod replaced the default status bars with a more modern look, as well as acts as a base for several of my other mods.",
  "authors": [
    "Me!"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC BY-NC-SA 4.0",
  "icon": "assets/anakus_status_bars/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "net.anakusenko.anakus_status_bars.AnakusStatusBarsClient"
    ]
  },
  "mixins": [
    "anakus_status_bars.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
